# ============================================================================
# PRIMARY CONFIGURATION
# ============================================================================

API_PRIMARY.APP_NAME="libra-link"
API_PRIMARY.ENV="development"

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

API_SERVER.PORT="8080"
API_SERVER.READ_TIMEOUT="30s"
API_SERVER.WRITE_TIMEOUT="30s"
API_SERVER.IDLE_TIMEOUT="60s"
API_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

API_DATABASE.HOST="localhost"
API_DATABASE.PORT="5432"
API_DATABASE.USER="postgres"
API_DATABASE.PASSWORD=""
API_DATABASE.NAME="libra-link"
API_DATABASE.SSL_MODE="disable"
API_DATABASE.MAX_OPEN_CONNS="25"
API_DATABASE.MAX_IDLE_CONNS="25"
API_DATABASE.CONN_MAX_LIFETIME="5m"
API_DATABASE.CONN_MAX_IDLE_TIME="5m"

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================

API_AUTH.SECRET_KEY="secret"    # can be generated using `openssl rand -base64 32`
API_AUTH.ACCESS_TOKEN_TTL="1h"
API_AUTH.GOOGLE_CLIENT_ID=""     # optional, required for Google login
API_AUTH.GOOGLE_CLIENT_SECRET="" # optional, required for Google login
API_AUTH.GOOGLE_REDIRECT_URL="http://localhost:8080/api/v1/auth/google/callback"   # optional, required for Google login
API_AUTH.GOOGLE_SUCCESS_REDIRECT_URL="http://localhost:3000/auth/me"    # optional, required for Google login
API_AUTH.GOOGLE_FAILURE_REDIRECT_URL="http://localhost:3000/auth/login" # optional, required for Google login
API_AUTH.REFRESH_TOKEN_TTL="720h"
API_AUTH.EMAIL_VERIFICATION_TTL="10m"
API_AUTH.ACCESS_COOKIE_NAME="access_token"
API_AUTH.REFRESH_COOKIE_NAME="refresh_token"
API_AUTH.COOKIE_DOMAIN=""   # optional, set for cross-subdomain cookies
API_AUTH.COOKIE_SAME_SITE="lax"     # one of: lax, strict, none

# ============================================================================
# SMTP CONFIGURATION
# ============================================================================

# SMTP Credentials
API_SMTP.HOST="smtp.gmail.com"
API_SMTP.PORT="587"
API_SMTP.USERNAME="you@gmail.com"
API_SMTP.PASSWORD="app_specific_password"
API_SMTP.FROM_EMAIL="you@gmail.com"
API_SMTP.FROM_NAME="libra-link"

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

API_CACHE.TTL="5m"
API_CACHE.REDIS_ADDRESS="localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
API_OBSERVABILITY.SERVICE_NAME="libra-link"
API_OBSERVABILITY.ENV="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
API_OBSERVABILITY.LOGGING.LEVEL="debug"
API_OBSERVABILITY.LOGGING.FORMAT="console"
API_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
API_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
API_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
API_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
API_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
API_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
API_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
API_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
API_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"


# ============================================================================
# SEEDER CONFIGURATION
# ============================================================================
API_SEEDER.ENABLED="true"
API_SEEDER.TIMEOUT="60s"

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================

API_FILE_STORAGE.PROVIDER="local" # local or s3
API_FILE_STORAGE.MAX_UPLOAD_SIZE_MB="25"
API_FILE_STORAGE.ALLOWED_MIME_TYPES="image/jpeg,image/png,image/webp,image/gif,video/mp4,video/webm"
API_FILE_STORAGE.PATH_PREFIX="uploads"

API_FILE_STORAGE.LOCAL.BASE_DIR="static"
API_FILE_STORAGE.LOCAL.PUBLIC_PATH="/static"

# S3 Configuration (required if using S3 as provider)
API_FILE_STORAGE.S3.BUCKET=""
API_FILE_STORAGE.S3.REGION=""
API_FILE_STORAGE.S3.ENDPOINT=""
API_FILE_STORAGE.S3.PUBLIC_URL=""
API_FILE_STORAGE.S3.ACCESS_KEY_ID=""
API_FILE_STORAGE.S3.SECRET_ACCESS_KEY=""
API_FILE_STORAGE.S3.FORCE_PATH_STYLE="false"